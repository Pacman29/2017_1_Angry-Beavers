mixin row(player)
    if player
        tr
            th.col-lg-2= player.position
            th.col-lg-8= player.nickname
            th.col-lg-2= player.score
    else if player === 0
        tr.header
            th.col-lg-2= "..."
            th.col-lg-8= "..."
            th.col-lg-2= "..."
    else
        tr.header
            th.col-lg-2= "#"
            th.col-lg-8= "Nickname"
            th.col-lg-2= "Score"

table.score_list
    +row()
    each topPlayer in topPlayers
        +row(topPlayer)
    +row(0)
    +row(player)
